<!DOCTYPE html>
<%= render '/refinery/html_tag' %>
<% site_bar = render('/refinery/site_bar', :head => true) -%>
<%= render '/refinery/head' %>
<body>
  <%= site_bar -%>
  <%= render '/refinery/ie6check' if request.env['HTTP_USER_AGENT'] =~ /MSIE/ -%>
  <div class="wrapper">
    <div class="container">
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
            <%= link_to "Conseil Expert Plus", @home, class: 'brand' %>
            <div class="nav-collapse collapse navigation-top pull-right">
              <ul class="nav">
                <% refinery_menu_pages.each do |page| %>
                  <li><%= link_to page.title, page.url %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div><!-- end navbar -->
        <% if @page.images.any? %>
          <div class="row-fluid slide">
            <div class="span12">
              <div id="myCarousel" class="carousel slide">
                <div class="carousel-inner">
                  <% @page.images.each do |image| %>
                    <div class="item">
                      <img alt="" src="<%= image.url %>">
                    </div>
                  <% end %>
                </div>
                <a class="left carousel-control" href="#myCarousel" data-slide="prev"></a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next"></a>
              </div>
            </div>
          </div><!-- end slide -->
        <% end %>

      <div id="main-container">
        <%= yield %>
      </div>
    </div><!-- end container -->
  </div><!-- end wrapper -->

  <div class="row-fluid footer">
    <div class="footer-wrap">
      <div class="span6">
        <h2>Bootflag</h2>
        <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.</p>
      </div><!-- end span6 -->
      <div class="span6 footer-address">
        <h2>Contact Us</h2>
        <div class="">
          <i class="icon-home icon-white"></i>
          <p>795 Folsom Ave, Suite 600 San Francisco, CA 94107<br>Phone: (123) 456-7890<br>Fax: (123) 456-7890</p>
        </div>
        <div class="">
          <i class="icon-envelope icon-white"></i><p>email@bootflag.com</p>
        </div>
        <div class="footer-sosio">
          <img src="assets/fb.png" alt="facebook" title="facebook"><img src="assets/twitter.png" alt="twitter" title="twitter">
        </div>
      </div><!-- end footer address -->
      <div class="span12">
        <div class="footer-copyright">Copyright © 2012 Bootflag Company Profile. All right reserved.
        </div>
      </div><!-- end span12 -->
    </div><!-- end footer wrap -->
  </div><!-- end footer -->
  <%= render '/refinery/javascripts' %>
  <script>$('.carousel').carousel({interval: 2000})</script>
</body>
</html>
